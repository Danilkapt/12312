<Page x:Class="zavod.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:zavod"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Frame x:Name="MFrame" NavigationUIVisibility ="Hidden"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Услуги" Margin="5" Width="300" Click="Yslygi_Click"/>
            <Button Content="Сотрудники" Margin="5" Click="Sotr_Click"/>
            <Button Content="Отделы" Margin="5" Click="Otdel_Click"/>
            <Button Content="Оборудование" Margin="5" Click="Obor_Click"/>
            <Button Content="Выход" Margin="5" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Page>
